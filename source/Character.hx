	private function getCurAnim ()
		{
			return animation == null ? null : animation.curAnim;
		}
	override function update(elapsed:Float)
	{
	if (!isOnEditor)
	{

		if (!isPlayer)
		{
			if (getCurAnim() !=null)
			{
			if (getCurAnim().name.startsWith('sing'))
			{
				holdTimer += elapsed;
			} 
			} 

			var dadVar:Float = 4;

			if (curCharacter == 'dad') 
				dadVar = 6.1;
			if (holdTimer >= Conductor.stepCrochet * dadVar * 0.001)
			{
				dance();
				holdTimer = 0;
			}
		}

		switch (curCharacter)
		{
			case 'gf':
			
				if (getCurAnim().name == 'hairFall' && getCurAnim().finished)
					playAnim('danceRight');
		}

	}
		super.update(elapsed);
	}

	private var danced:Bool = false;

	/**
	 * FOR GF DANCING SHIT
